<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:dam="http://www.day.com/dam/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="cq:Page">
    <jcr:content jcr:primaryType="nt:unstructured">
        <actions jcr:primaryType="nt:unstructured">
            <secondary jcr:primaryType="nt:unstructured">
                <create jcr:primaryType="nt:unstructured">
                    <items jcr:primaryType="nt:unstructured">
                        <createdamview jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/collection/actionlink"
                            action="foundation.dialog"
                            granite:comment="The actionlink uses the URI derived from the `href.uritemplate` value on the `data` node. The `href` attribute is  only used externally (e.g. HApi tests), not by the actionlink itself"
                            granite:rel="cq-siteadmin-admin-createfolder"
                            href="/apps/dam-views/content/authoring/createdamviewwizard.html${requestPathInfo.suffix}"
                            icon="folder"
                            rel="cq-siteadmin-admin-createfolder"
                            relScope="collection"
                            target=".cq-siteadmin-admin-childpages"
                            text="DAM View">
                            <data jcr:primaryType="nt:unstructured"
                                nesting="hide"
                                src.uritemplate="/apps/dam-views/content/authoring/createdamviewwizard.html{+id}" />
                        </createdamview>
                    </items>
                </create>
            </secondary>
            <selection jcr:primaryType="nt:unstructured">
                <create jcr:primaryType="nt:unstructured">
                    <items jcr:primaryType="nt:unstructured">
                        <createdamview jcr:primaryType="nt:unstructured"
                           sling:resourceType="granite/ui/components/coral/foundation/collection/actionlink"
                           action="foundation.dialog"
                           activeSelectionCount="single"
                           granite:comment="The actionlink uses the URI derived from the `href.uritemplate` value on the `data` node. The `href` attribute is  only used externally (e.g. HApi tests), not by the actionlink itself"
                           granite:rel="cq-siteadmin-admin-createfolder"
                           href="/apps/dam-views/content/authoring/createdamviewwizard.html${requestPathInfo.suffix}"
                           icon="folder"
                           rel="cq-siteadmin-admin-createfolder"
                           relScope="collection"
                           target=".cq-siteadmin-admin-childpages"
                           text="DAM View">
                            <data jcr:primaryType="nt:unstructured"
                                  nesting="hide"
                                  src.uritemplate="/apps/dam-views/content/authoring/createdamviewwizard.html{+id}" />
                        </createdamview>
                    </items>
                </create>
            </selection>
        </actions>
    </jcr:content>
</jcr:root>